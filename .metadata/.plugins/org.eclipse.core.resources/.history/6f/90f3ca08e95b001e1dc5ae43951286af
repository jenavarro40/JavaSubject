import java.util.Scanner;

public class CodeBreaker {
	char[] GuessCodeArray = new char[4];
// A member variable of Code to store the guess code
	Code guessCode;

// default constructor
	public CodeBreaker() {
	}

// getter of guessCode
	public Code getGuessCode() {
		return guessCode;
	}

// setter of guessCode
	public void setGuessCode(Code guessCode) {
		this.guessCode = guessCode;
	}

// This is a method to get the guess code from the player, and store
// the input to guessCode.
	public void getGuessCodeInput() {
		Scanner scan = new Scanner(System.in);
		String codescan=scan.nextLine();
		codescan.replaceAll(" ", )
		int a=0;
		

		for (int i = 0; i < GuessCodeArray.length; i++) {
			
			
			GuessCodeArray[i] = codescan.charAt(a);
			a=a+2;
		}
		
		Code code=new Code();
		code.setPegs(GuessCodeArray[0],GuessCodeArray[1],GuessCodeArray[2],GuessCodeArray[3]);
		guessCode=new Code (GuessCodeArray[0],GuessCodeArray[1],GuessCodeArray[2],GuessCodeArray[3]);

	}

}